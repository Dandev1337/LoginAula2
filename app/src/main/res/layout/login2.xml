<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/Login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/Login1"
        app:srcCompat="@drawable/_200px_instituto_federal_marca_2015_svg" />

    <TextView
        android:id="@+id/Login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="150dp"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="250dp"
        android:text="Senha:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextTextEmailAddress3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@id/Login2"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextEmailAddress3"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/Senha"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/EntrarButton"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Senha"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="132dp"
        android:text="Entrar" />

    <Button
        android:id="@+id/ForgotButton"
        android:layout_width="203dp"
        android:layout_height="58dp"
        android:layout_below="@id/Senha"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="193dp"
        android:text="Esqueci Minha Senha" />
</RelativeLayout>